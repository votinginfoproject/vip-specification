<?xml version="1.0" encoding="utf-8"?>
<!--
     Working version of VIP Delta Specification
  -->
<xs:schema attributeFormDefault="unqualified" elementFormDefault="unqualified" version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:complexType name="ExternalFile">
    <xs:sequence>
      <xs:element name="FileUri" type="xs:anyURI" minOccurs="1" />
      <xs:element name="Checksum" type="Checksum" minOccurs="1" />
    </xs:sequence>
    <xs:attribute name="id" type="xs:ID" use="required" />
  </xs:complexType>

  <xs:complexType name="Checksum">
    <xs:sequence>
      <xs:element name="Algorithm" type="ChecksumAlgorithm" minOccurs="1" />
      <xs:element name="Value" type="xs:string" minOccurs="1" />
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="ChecksumAlgorithm">
    <xs:restriction base="xs:string">
      <xs:enumeration value="sha-512" />
      <xs:enumeration value="sha-256" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="VipDeltaType">
     <xs:restriction base="xs:string">
          <xs:enumeration value="optool" />
          <xs:enumeration value="blocklist" />
     </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="VipDelta">
    <xs:sequence>
      <!-- For blocklist -->
      <xs:element name="VipRecordId" minOccurs="1" maxOccurs="1" />
      <xs:element name="VipDeltaType" type="VipDeltaType" minOccurs="1" maxOccurs="1" />
      <xs:element name="DateOfChange" type="xs:dateTime" minOccurs="1" maxOccurs="1" />
      <!-- For Optool -->
      <xs:element name="NewRecord" minOccurs="0" />
    </xs:sequence>
    <xs:attribute name="id" type="xs:ID" use="required" />
  </xs:complexType>



<!-- Root Element -->
<xs:element name="VipDeltas" >
     <xs:complexType>
      <xs:choice maxOccurs="unbounded">
          
               <!-- Reference the compressed file containing the VipObject file for relevent deltas -->
               <xs:element name="ExternalFile" type="ExternalFile" minOccurs="1" maxOccurs="1" />

               <xs:element name="VipDelta" type="VipDelta"/>
      
      </xs:choice>  
      <!-- Attributes of the VipDeltas root element -->
      <xs:attribute name="VipEid" type="xs:string" />
      <xs:attribute name="VipNid" type="xs:string" />
      
     </xs:complexType>
</xs:element>

</xs:schema>

